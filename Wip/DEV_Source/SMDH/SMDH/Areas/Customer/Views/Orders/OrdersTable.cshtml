@model IEnumerable<SMDH.Models.Order>
@using System.Text.RegularExpressions; 
@using SMDH.Models.Statuses;
@{
    Layout = null;
}
<table class="table table-striped table-bordered" id="main-table">
    <thead>
        <tr>
            <th>
                Order No.
            </th>
            <th>
                Requested Date
            </th>
            <th>
                Receiver Address
            </th>
            <th>
                Amount To Collect
            </th>
            <th>
                Delivery Option
            </th>
            <th>
                Payment Type
            </th>
            <th>
                Status
            </th>
            <th>
                Due Date
            </th>
            <th>
            </th>
            <th>
                Fee
            </th>
            <th>
                Note
            </th>
            <th class="tbl-action-col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    #@item.OrderId
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy hh:mm tt}", item.Request.RequestedDate)
                </td>
                <td>
                    @item.FullAddress
                </td>
                <td>
                    @item.AmountToBeCollectedFromReceiver
                </td>
                <td>
                    @(item.DeliveryOption == null ? "None" : item.DeliveryOption.Name)
                </td>
                <td>
                    @(item.OrderPaymentType == null ? "None" : item.OrderPaymentType.Name)
                </td>
                <td>
                    @((OrderStatus)(item.OrderStatus))
                </td>
                <td>
                    @if (item.DueDate != null)
                    {
                        @String.Format("{0:dd/MM/yyyy hh:mm tt}", item.DueDate)
                    }
                    else
                    {
                        <span class="label label-important">Not set yet</span><text>&nbsp;</text>
                    }
                </td>
                <td>
                        @if (item.DueDate != null)
                        {
                            @String.Format("{0:yyyyMMddHHmm}", item.DueDate)
                        }
                        else
                        {
                            <text>000</text>
                        }
                    </td>
                <td>
                    @if (item.Fee != null)
                    {
                        @item.Fee
                    }
                    else
                    {
                        <span class="label label-important">Not set yet</span><text>&nbsp;</text>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.Note))
                    {
                        @item.Note
                    }
                    else
                    {
                        <text>None</text>
                    }
                </td>
                <td class=" action-column">
                     <div class="btn-group">
                              <button data-toggle="dropdown" class="btn btn-mini dropdown-toggle">
                                Action 
                                <span class="caret">
                                </span>
                              </button>
                              <ul class="dropdown-menu">
                                <li>
                                  <a href="Orders/Details/@item.OrderId">
                                    View
                                  </a>
                                </li>
                                @if (item.Status == SMDH.Models.Statuses.OrderStatus.Draft || item.Status == SMDH.Models.Statuses.OrderStatus.Rejected)
                                {
                                <li>
                                  <a href="javascript:void(0)" onclick="cancelOrder(@item.OrderId);">
                                    Canceled
                                  </a>
                                </li>
                                    }
                              </ul>
                       </div>                             
                </td>
            </tr>
        }
    </tbody>
</table>
