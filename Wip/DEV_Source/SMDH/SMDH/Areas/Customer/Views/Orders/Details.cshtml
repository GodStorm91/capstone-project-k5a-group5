<div class="row-fluid">
    @if (Model.OrderStatus == (int)OrderStatus.PlannedForCollecting)
    { 
        <a class="btn btn-primary" href="/Customer/Orders?status=plannedforcollecting">Back to Index</a>
    }

    @if (Model.OrderStatus == (int)OrderStatus.Delivering)
    { 
        <a class="btn btn-primary" href="/Customer/Orders?status=delivering">Back to Index</a>
    }
    
</div>
<div class="row-fluid" style="margin-top: 10px;">
    <div class="span12">
        <div class="span6">
            <div class="widget">
                <div class="widget-body">
                    <form class="no-margin">
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Created Date: : @String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.CreatedDate)
                            </label>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Amount To Collect: : @String.Format("{0:N0}", Model.AmountToBeCollectedFromReceiver) VNĐ
                            </label>
                            <label class="control-label" for="name">
                                Fee:   @if (Model.Fee != null)
                                       {
                                    @String.Format("{0:N0}", Model.Fee) @:VNĐ <text>VNĐ</text>
                        }
                                       else
                                       {
                                    <span class="label label-important">Not set yet</span><text>&nbsp;</text>
                                       }
                            </label>
                            <label class="control-label" for="name">
                                Properties : <span class="label label-success">@Model.DeliveryOption.Name</span>
                                <span class="label label-info">@Model.OrderPaymentType.Name</span>
                            </label>
                            <label class="control-label" for="name">
                                Receiver Name : @Model.ReceiverName
                            </label>
                            <label class="control-label" for="name">
                                Receiver Phone : @Model.ReceiverPhone
                            </label>
                            <label class="control-label" for="name">
                                Due Date :  @if (Model.DueDate != null)
                                            {
                                    <span class="label label-important">@String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.DueDate)</span><text>&nbsp;</text>
                                            }
                                            else
                                            {
                                    <span class="label label-important">Not set yet</span><text>&nbsp;</text>
                                            }
                            </label>


                        </div>

                        <div class="control-group">
                            <label class="control-label" for="name">
                                Note :
                                                @if (string.IsNullOrWhiteSpace(Model.Note))
                                                {
                                                    <text>None</text>        
                                                }
                                                else
                                                {
                                                    @Model.Note
                                                }
                            </label>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Delivery Address : @Model.FullAddress
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="widget">
                <div class="widget-header">
                    <div class="title">
                        Items
                    </div>
                </div>
                <div class="widget-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name
                                </th>
                                <th>Weight
                                </th>
                                <th>Quantity
                                </th>
                                <th>Properties
                                </th>
                                <th>Note
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Items)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>@item.Weight
                                    </td>
                                    <td>@item.Quantity
                                    </td>
                                    <td>
                                        @if (!item.IsFragile && !item.HasHighValue)
                                        { <text>None</text> }
                                        @if (item.IsFragile)
                                        {<span class="label label-success">Fragile</span><text>&nbsp;</text>}
                                        @if (item.HasHighValue)
                                        {<span class="label label-info">High Value</span><text>&nbsp;</text>}
                                    </td>
                                    <td>
                                        @if (string.IsNullOrWhiteSpace(item.Note))
                                        {
                                            <text>None</text>        
                                        }
                                        else
                                        {
                                            @item.Note
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


