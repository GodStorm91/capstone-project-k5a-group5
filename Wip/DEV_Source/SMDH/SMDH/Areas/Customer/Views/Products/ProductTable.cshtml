@model IEnumerable<SMDH.Models.Product>
@using System.Text.RegularExpressions;
@{
    Layout = null;
}
<table class="table table-striped table-bordered" id="main-table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Size
            </th>
            <th>
                ProductWeight
            </th>
            <th>
                Price
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th class="tbl-action-col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                   @item.Size
                </td>
                <td>@item.ProductWeight
                </td>
                <td>
                    @item.ProductPrice
                </td>
                <td>
                    <img src="@item.ImageURL" style="height:30px;width:30px;" alt=""/>
                </td>
                <td>
                    @item.ProductCategory
                </td>
                <td class="action-column">
                    <a class="update btn action" href="javascript:void(0)" onclick="edit(@item.ProductId)">
                        <img src="/img/icons/pencil.png" alt="Edit" title="Edit" /></a> <a class="btn action delete" href="#" onclick="deleteItemManagement(@item.ProductId);">
                            <img src="/img/icons2/cross.png" alt="Cancel" title="Cancel Request" width="15px" />
                        </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    var deleteItemManagement = function (productID) {
        bootbox.confirm("Are you sure to cancel this request?", function (result) {
            if (result) {
                $.post('/Customer/Products/Remove/' + productID, function (result) {
                    if (result.success) {
                        $.blockUI();
                        window.location.reload();
                    } else {
                        bootbox.alert('Failed to cancel this request.');
                    }
                });
            }
        });
    };
</script>
