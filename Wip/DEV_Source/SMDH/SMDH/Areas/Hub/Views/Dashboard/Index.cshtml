@model IEnumerable<SMDH.Models.Order>
@using System.Text.RegularExpressions;
@using SMDH.Models.Statuses
@{
    ViewBag.Title = "Dashboard";
    ViewBag.Heading = "Dashboard";
}
<link rel="stylesheet" type="text/css" href="/css/DT_bootstrap.css" />
<link rel="stylesheet" type="text/css" href="/css/select2.css" />
<link href="/css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" charset="utf-8" language="javascript" src="/js/jquery.dataTables.js"></script>
<script type="text/javascript" charset="utf-8" language="javascript" src="/js/DT_bootstrap.js"></script>
<script src="/js/dataTables.bootstrap.js" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="/js/crud.js" type="text/javascript"></script>
<script src="/js/form-action.js" type="text/javascript"></script>
<script src="/js/chosen.jquery.js" type="text/javascript"></script>
<link href="/css/datepicker.css" rel="stylesheet" type="text/css" />
<script src="/js/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="/js/date.js" type="text/javascript"></script>
<div class="widget-box">
    <div class="widget-title">
        <span class="icon"><i class=" icon-hand-right"></i></span>
        <h5>
            Tracking Order</h5>
    </div>
    <div class="widget-content nopadding">
        <form action="#" method="get" class="form-horizontal">
        <div class="control-group">
            <label class="control-label">
                Passcode</label>
            <div class="controls">
                <input type="text" />
                <button type="submit" class="btn btn-primary">
                    Comfirm</button>
            </div>
        </div>
        </form>
    </div>
</div>
<div class="widget-box">
    <div class="widget-title">
        <span class="icon"><i class=" icon-hand-right"></i></span>
        <h5>
            Order Tables</h5>
    </div>
    <div class="widget-content">
        <ul class="nav nav-tabs" id="myTab">
            <li><a href="#1"><i class="icon icon-th-list"></i><span>DeliveringToHub</span> <span
                class="label">@ViewBag.NumberOfOrders[0]</span></a></li>
            <li><a href="#2"><i class="icon icon-th-list"></i><span>Delivering</span> <span class="label">@ViewBag.NumberOfOrders[1]</span></a></li>
            <li><a href="#3"><i class="icon icon-th-list"></i><span>Delivered</span> <span class="label">@ViewBag.NumberOfOrders[2]</span></a></li>
            <li><a href="#4"><i class="icon icon-th-list"></i><span>WaitingForReturn</span> <span
                class="label">@ViewBag.NumberOfOrders[3]</span></a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane" id="1">
                <table id="DeliveringToHub" class="table table-striped table-bordered with-check">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" />
                            </th>
                            <th>
                                OrderID
                            </th>
                            <th>
                                Item No.
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Delivery Date
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane" id="2">
                <table id="Delivering" class="table table-striped table-bordered with-check">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" />
                            </th>
                            <th>
                                OrderID
                            </th>
                            <th>
                                Item No.
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Delivery Date
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane" id="3">
                <table id="Delivered" class="table table-striped table-bordered with-check">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" />
                            </th>
                            <th>
                                OrderID
                            </th>
                            <th>
                                Item No.
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Delivery Date
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tab-pane" id="4">
                <table id="WaitingForReturn" class="table table-striped table-bordered with-check">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" />
                            </th>
                            <th>
                                OrderID
                            </th>
                            <th>
                                Item No.
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Delivery Date
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#myTab a:first').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        $('#DeliveringToHub').dataTable({
            "sDom": "<'row'<'span6 tblBtnGroup'><'span6'f>r>t<'row'<'span6'l><'span6'p>>",
            "aoColumns": [
        { "mDataProp": [0], sDefaultContent: "n/a","sWidth": "5%" },
        { "mDataProp": [1], sDefaultContent: "n/a","sWidth": "10%" },
        { "mDataProp": [2], sDefaultContent: "n/a" },
        { "mDataProp": [3], sDefaultContent: "n/a" },
        { "mDataProp": [4], sDefaultContent: "n/a" },
        { "mDataProp": [5], sDefaultContent: "n/a","sWidth": "10%" }
        ],
            "bProcessing": false,
            "bServerSide": true,
            "bSort": false,
            "sAjaxSource": '/Hub/Dashboard/getalldataDeliveringToHub/',
            "sServerMethod": "POST",
            "bDestroy": true
        });
    })

    $('#myTab li:eq(1) a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        $('#Delivering').dataTable({
        "sDom": "<'row'<'span6 tblBtnGroup'><'span6'f>r>t<'row'<'span6'l><'span6'p>>",
            "aoColumns": [
             { "mData": "checkbox", sDefaultContent: "n/a","sWidth": "5%" },
        { "mData": "OrderId", sDefaultContent: "n/a","sWidth": "10%" },
        { "mData": "Count", sDefaultContent: "n/a" },
        { "mData": "Fee", sDefaultContent: "n/a" },
        { "mData": "DeliveryDate", sDefaultContent: "n/a" }
        ],
            "bProcessing": false,
            "bServerSide": true,
            "bSort": false,
            "sAjaxSource": '/Hub/Dashboard/getalldataDelivering/',
            "sServerMethod": "POST",
            "bDestroy": true
        });
    })

    $('#myTab li:eq(2) a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        $('#Delivered').dataTable({
        "sDom": "<'row'<'span6 tblBtnGroup'><'span6'f>r>t<'row'<'span6'l><'span6'p>>",
            "aoColumns": [
             { "mData": "checkbox", sDefaultContent: "n/a","sWidth": "5%" },
        { "mData": "OrderId", sDefaultContent: "n/a","sWidth": "10%" },
        { "mData": "Count", sDefaultContent: "n/a" },
        { "mData": "Fee", sDefaultContent: "n/a" },
        { "mData": "DeliveryDate", sDefaultContent: "n/a" }
        ],
            "bProcessing": true,
            "bServerSide": true,
            "bSort": false,
            "sAjaxSource": '/Hub/Dashboard/getalldataDelivered/',
            "sServerMethod": "POST",
            "bDestroy": true
        });
    })

   $('#myTab a:last').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
        $('#WaitingForReturn').dataTable({
        "sDom": "<'row'<'span6 tblBtnGroup'><'span6'f>r>t<'row'<'span6'l><'span6'p>>",
            "aoColumns": [
             { "mData": "checkbox", sDefaultContent: "n/a","sWidth": "5%" },
        { "mData": "OrderId", sDefaultContent: "n/a","sWidth": "10%" },
        { "mData": "Count", sDefaultContent: "n/a" },
        { "mData": "Fee", sDefaultContent: "n/a" },
        { "mData": "DeliveryDate", sDefaultContent: "n/a" }
        ],
            "bProcessing": true,
            "bServerSide": true,
            "bSort": false,
            "sAjaxSource": '/Hub/Dashboard/getalldataWaitingForReturn/',
            "sServerMethod": "POST",
            "bDestroy": true
        });
    })

</script>
