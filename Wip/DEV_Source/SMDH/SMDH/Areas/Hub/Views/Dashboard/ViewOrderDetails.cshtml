<div class="row-fluid">
    <div class="span12">
        <a href="/Hub/Dashboard/ViewInformationOrder/@Model.ReceiverPhone" class="btn btn-primary"><i class="icon-arrow-left"></i>Back to check Order</a>
    </div>
</div>
<div class="row-fluid" style="margin-top: 10px;">
    <div class="span12">
        <div class="span6">
            <div class="widget">
                <div class="widget-body">
                    <form class="no-margin">
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Customer : @Model.Customer
                            </label>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Created Date: : @String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.CreatedDate)
                            </label>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Amount: @String.Format("{0:N0}", Model.Amount) VNĐ
                            </label>
                            <label class="control-label" for="name">
                                Properties : <span class="label label-success">@Model.DeliveryOption</span>
                                <span class="label label-info">@Model.OrderPaymentType</span>
                            </label>
                            <label class="control-label" for="name">
                                Your Name : @Model.ReceiverName
                            </label>
                            <label class="control-label" for="name">
                                Your Phone : @Model.ReceiverPhone
                            </label>
                            <label class="control-label" for="name">
                                Status : <span class="label label-warning">@Regex.Replace(Model.Status.ToString(), "(\\B[A-Z])", " $1")</span>&nbsp;
                            </label>
                            <label class="control-label" for="name">
                                Due Date :   @if (Model.DueDate != null && !Model.DueDate.ToString().Equals(""))
                                             {
                                    <span class="label label-important">@String.Format("{0:dd/MM/yyyy hh:mm tt}", Model.DueDate)</span><text>&nbsp;</text>
                                             }
                                             else
                                             {
                                    <span class="label label-important">Not set yet</span><text>&nbsp;</text>
                                             }
                            </label>


                        </div>

                        <div class="control-group">
                            <label class="control-label" for="name">
                                Note :
                                                @if (string.IsNullOrWhiteSpace(Model.Note))
                                                {
                                                    <text>None</text>        
                                                }
                                                else
                                                {
                                                    @Model.Note
                                                }
                            </label>
                        </div>
                        <div class="control-group">
                            <label class="control-label" for="name">
                                Receive Address : @Model.ReceiverAddress
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="widget">
                <div class="widget-header">
                    <div class="title">
                        Items
                    </div>
                </div>
                <div class="widget-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name
                                </th>
                                <th>Quantity
                                </th>
                                <th>Properties
                                </th>
                                <th>Size
                                </th>
                                <th>Weight
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Items)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Quantity
                                    </td>
                                    <td>
                                        @if (item.IsFragile)
                                        { 
                                            <span class="label label-info">Fragile</span><text>&nbsp;</text> }
                                        @if (item.HasHighValue)
                                        { 
                                            <span class="label label-success">High Value</span><text>&nbsp;</text> }
                                    </td>
                                    <td>
                                        @item.Size
                                    </td>
                                    <td>
                                        @item.Weight
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
