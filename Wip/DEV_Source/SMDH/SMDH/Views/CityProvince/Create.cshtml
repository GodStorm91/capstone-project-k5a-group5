@model SMDH.Models.CityProvince
@{
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        ×</button>
    <h3 id="myModalLabel">
        Create new City/Province</h3>
</div>
@using (Html.BeginForm("ConfirmCreate", "CityProvince", FormMethod.Post, new { id = "create-form" }))
{
<div class="modal-body">
    <fieldset>
        

            @Html.ValidationSummary(true)
            @Html.Partial("_CreateOrEdit", Model)           
 
    </fieldset>
</div>
<div class="modal-footer">
    <input type="submit" class="btn btn-primary" value="Create" id="btnCreate" />
    <button class="btn" data-dismiss="modal" aria-hidden="true">
        Cancel</button>
</div>
}
<script>
    $('#btnCreate').click(function () {
        $('#create-form').submit();
    });
</script>