@{
    ViewBag.Title = "Index";
}
<script type="text/javascript" src="https://www.google.com/jsapi"></script>

<h2>Index</h2>
 
    <!--Div that will hold the pie chart-->
    <div id="chart_div"></div>  
  <script type="text/javascript">
      google.load("visualization", "1", { packages: ["corechart"] });
      google.setOnLoadCallback(drawChart);
      function drawChart() {
          alert("in draw chart");
          var tdata = new google.visualization.DataTable();
          tdata.addColumn('string', 'Month');
          tdata.addColumn('number', 'Fee');
          tdata.addColumn('number', 'Amount to be collected');
          alert("start post");
          $.post("/Report/GetData", function (data) {
              alert("receive data");
              for (var i = 0; i < data.length; i++) {
                  tdata.addRow([data[i].Date, data[i].TotalFee, data[i].TotalAmountToBeCollected]);
              }
              //Instantiate and draw our chart , passing some options
              var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
              var options = {
                  title: "Expenses, Salary For the current year"
              };
              alert("in drawing");
              chart.draw(tdata, options);
          });      
      }
  </script>
  <div id="chart_div" style="width: 900px; height: 500px;"></div>
